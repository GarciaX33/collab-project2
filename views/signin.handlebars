

<!-- Default form login -->
<form id="signin" class="text-center border border-light p-5" name="signin" method="POST" action="/signin">

    <p class="h4 mb-4">Sign in</p>

    <!-- Email -->
    <input type="email" id="LoginFormEmail" class="form-control mb-4" placeholder="E-mail" name="email">

    <!-- Password -->
    <input type="password" id="LoginFormPassword" class="form-control mb-4" placeholder="Password" name="password">

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
            </div>
        </div>
        <div>
            <!-- Forgot password -->
            <a href="#">Forgot password?</a>
        </div>
    </div>

    <!-- Sign in button -->
    <input class="btn btn-info btn-block my-4" id="submit" type="submit">Sign In</input>

    <!-- Register -->
    <p>New user?
        <a href="/signup">Sign Up Here</a>
    </p>

