<div class="container">
  <div class="jumbotron">
    <h1>Reservations</h1>
    <h3>Please reserve your dates below.</h3>
    <hr>

    <!--Log out BUTTON-->
    <a href="/" class="btn btn-danger btn-lg">
      <span class="fas fa-home"></span> Home</a>
    <a href="/logout" class="btn btn-danger btn-lg">
      <span class="fas fa-sign-out-alt"></span> Log Out</a>
  </div>


  <div class="row">

    <div class="col-lg-12">

      <div class="card" id="bookAppointment">
        <div class="card-header">
          <h4>Book Appointment</h4>
        </div>
        <div class="card-body">
          <form action="" method="POST" role="form">


            <!-- Drop down menu of what type of pets to pick from  -->
            <div class="form-group">
              <label for="pwd">Select Pet</label>
              <select id="selectPet" class="custom-select" aria-labelledby="dropdownMenuButton">
                

                {{#each pets}}
                <option value="{{id}}">{{petName}}</option>
                {{/each}}

              </select>

            </div>

            <div class="form-group">
              <label for="">Check-In Date</label>
              <input type="date" class="form-control" id="start" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Check-Out Date</label>
              <input type="date" class="form-control" id="end" placeholder="">
            </div>
          </form>

          <br>
          <!--book now BUTTON-->
          <div class="text-right">
            <button type="submit" class="btn btn-danger btn-lg" id="add-btn">
              <span class="fas fa-book"></span> Book Now</button>
          </div>
        </div>
      </div>


      <br>
      <br>



      <div class="row">
        <div class="col-lg-12">
          <div class="card" id="resDetail">
            <div class="card-header">
              <h2>Reservation Details</h2>
            </div>
            <div class="card-body" id="well-section">
              <p>Pet Type:</p>
              <div id="con-pet" data-id="0"></div> <!-- User start date/end date will go in here -->
            </div>

            <div class="card-body" id="well-section">
              <p>Check-In Date:</p>
              <div id="con-pet2"></div> <!-- User start date/end date will go in here -->
            </div>

            <div class="card-body" id="well-section">
              <p>Check-Out Date:</p>
              <div id="con-pet3"></div> <!-- User start date/end date will go in here -->
            </div>


          
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-secondary btn-lg" id="confirmRes">
                Confirm
              </button>
              
              <!-- Thank you: Modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Thank you!</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      You're reservation has been booked.
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal" id= "deleteRes">Close</button>
            
                    </div>
                  </div>
                </div>
              </div>
            </div>
           
        
<script src="js/reservation.js" type="text/javascript"></script>