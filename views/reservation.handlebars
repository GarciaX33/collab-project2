  <div class="container">
    <div class="jumbotron">
      <h1>Reservation</h1>
      <h3>Please fill out your appointment below.</h3>
      <hr>

<!--Log out BUTTON-->
      <a href="/" class="btn btn-danger btn-lg">
        <span class="fas fa-home"></span> Home</a>
      <a href="/views/reservation.handlebars" class="btn btn-danger btn-lg">
        <span class="fas fa-sign-out-alt"></span> Log Out</a>
    </div>


    <div class="row">

      <div class="col-lg-12">

        <div class="card" id="bookAppointment">
          <div class="card-header">
            <h4>Book Appointment</h4>
          </div>
          <div class="card-body">
            <form action="" method="POST" role="form">


              <!-- Drop down menu of what type of pets to pick from  -->
              <div class="form-group">
                <label for="pwd">Select Pet</label>
                <select id="selectPet" class="custom-select" aria-labelledby="dropdownMenuButton">

                  <option selected value="Bird">Bird</option>
                  <option value="Reptile" selected>Reptile</option>
                  <option value="Cat">Cat</option>
                  <option value="Dog">Dog</option>
                  <option value="Rat">Rat</option>
                  <option value="Ferret">Ferret</option>

                  {{#each pets}}
                  <option  value ="{{id}}">{{petName}}</option>
                  {{/each}}

                </select>

              </div>

              <div class="form-group">
                <label for="">Start Date</label>
                <input type="date" class="form-control" id="start" placeholder="">
              </div>

              <div class="form-group">
                <label for="">End Date</label>
                <input type="date" class="form-control" id="end" placeholder="">
              </div>
            </form>

            <br>
<!--book now BUTTON-->
            <div class="text-right">
              <button type="submit" class="btn btn-danger btn-lg" id="add-btn">
                <span class="fas fa-book"></span>Book Now</button>
            </div>
          </div>
        </div>


        <br>
        <br>



        <div class="row">
          <div class="col-lg-12">
            <div class="card" id="resDetail">
              <div class="card-header">
                <h2>Reservation Details</h2>
              </div>
              <div class="card-body" id="well-section">
                <p>Pet Type:</p>
                <div id="con-pet" data-id="0"></div> <!-- User start date/end date will go in here -->
              </div>

              <div class="card-body" id="well-section">
                <p>Start Date:</p>
                <div id="con-pet2"></div> <!-- User start date/end date will go in here -->
              </div>

              <div class="card-body" id="well-section">
                <p>End Date:</p>
                <div id="con-pet3"></div> <!-- User start date/end date will go in here -->
              </div>


              <!-- Button trigger modal -->
              <button type="button" class="btn btn-danger btn-lg" id="confirmRes">
                Confirm
              </button>
              
              <!-- Confirmation Modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Reservation Confirmation</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Are you ready to book your reservation?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal" id= "ddeleteRes">No, Delete</button>
                      <button type="button" class="btn btn-secondary" id="dconfirmRes">Yes, Confirm</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

           
              
